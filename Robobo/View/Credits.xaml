<Page x:Class="Robobo.View.Credits"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Robobo.View"
      mc:Ignorable="d" 
      d:DesignHeight="1060" d:DesignWidth="1500"
      Title="Credits">
    <Page.Resources>
        <Style TargetType="Label" x:Key="LabelHeader">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="Margin" Value="0, 530,0,0"></Setter>
            <Setter Property="FontFamily" Value="Muller"></Setter>
            <Setter Property="FontWeight" Value="Thin"></Setter>
            <Setter Property="FontSize" Value="30px"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Label Content="Designed and made with love by cheeeezee" Style="{StaticResource LabelHeader}"></Label>
        <Label Content="In 2020" Style="{StaticResource LabelHeader}" Margin="0, 580,0,0" FontSize ="20"></Label>
        <Label Content="Contact: powHexi@gmail.com" Style="{StaticResource LabelHeader}" Margin="0, 620,0,0" FontSize ="15"></Label>
    </Grid>
</Page>
